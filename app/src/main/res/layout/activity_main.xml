<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xingzhi.android.biz.widget.NoScrollViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mLlNav"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mLlNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_base_bg3"
        android:elevation="@dimen/height_5"
        app:layout_constraintBottom_toBottomOf="parent">

        <fragment
            android:id="@+id/mNavBar"
            android:name="com.xingzhi.android.components.main.NavFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_48" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>